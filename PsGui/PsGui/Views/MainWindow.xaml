<Window x:Class="PsGui.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PsGui.Views"
        mc:Ignorable="d"
        Title="PSGUI" MaxHeight="600" MaxWidth="450">

    <Border Padding="10">
        <Grid>
            <TabControl Padding="10">
                <TabItem DataContext="{Binding Path=Tabs[0]}" x:Name="Tab1" Header="{Binding Path=TabName}">
                    <local:PowershellExecuterView />
                </TabItem>
                <TabItem DataContext="{Binding Path=Tabs[1]}" x:Name="Tab2" Header="{Binding Path=TabName}">
                    <local:ActiveDirectoryInfo />
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
