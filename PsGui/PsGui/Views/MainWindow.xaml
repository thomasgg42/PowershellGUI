<Window x:Class="PsGui.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PsGui.Views"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="600" MaxWidth="450">
    <Border Padding="10">
        <Grid>
            <TabControl Padding="10">
                <TabItem DataContext="{Binding Tabs[0]}" x:Name="Tab1" Header="{Binding TabName}" >
                    <local:PowershellExecuterView />
                    <!--https://www.c-sharpcorner.com/uploadfile/mahesh/user-control-in-wpf/-->
                    <!--https://stackoverflow.com/questions/1590031/tabitem-in-a-separate-xaml-->
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
