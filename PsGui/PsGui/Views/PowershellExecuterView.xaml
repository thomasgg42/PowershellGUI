                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="category" Content="{Binding ScriptCategoryBrowser}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
-->
        <ComboBox ItemsSource="{Binding ScriptFileBrowser}"
                  Grid.Column="0" Grid.Row="2"
                  Grid.ColumnSpan="3"
                  Margin="10 0 10 0"/>
        
        <TextBlock Text="Input" Grid.Row="3"
                   Grid.Column="0" FontWeight="Bold" />
        
        <Button Grid.Row="4" Grid.Column="0"
                Content="Run Script"
                Margin="10 0 10 0"/>

        <TextBlock Text="Output" FontWeight="Bold"
                   Grid.Row="5" Grid.Column="0" />

        <TextBlock Text="{Binding TabName}" Grid.Row="6"
                   Grid.Column="0"
                   Margin="10 0 10 0"/>
    </Grid>
</UserControl>
