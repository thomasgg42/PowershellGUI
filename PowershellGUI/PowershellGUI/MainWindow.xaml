<Window x:Class="PowershellGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowershellGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Padding="10">
            <StackPanel>
                <ComboBox x:Name="FileListComboBox" SelectionChanged="ComboBox_SelectionChanged" Loaded="ComboBox_Loaded" />
                <Button Content="OK" Click="Button_Click"></Button>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Height="200">
                    <TextBox Height="100" x:Name="OutputTextBlock"></TextBox>
                </ScrollViewer>
               
            </StackPanel>
        </Border>
    </Grid>
</Window>
